@model FossERp.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_DetailsLayout.cshtml";

}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link href="https://fonts.googleapis.com/css?family=Maitree&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,900&display=swap" rel="stylesheet">
<style>
    .tex-white {
        background-color: lightseagreen;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 18px;
        /*margin-right: 211px;*/
        color: white;
    }

        .tex-white a {
            color: white;
        }

    h6 {
        font-size: 13px;
        font-family: 'Maitree', serif;
        font-weight: bold;
    }

    p {
        font-size: 13px;
        font-family: 'Roboto', sans-serif;
    }
</style>
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#tabs").tabs();
    });
</script>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-5">
                <div class="card-body">
                    <div class="row border-bottom mt-5">
                      
                        <div class="col-4">
                            <p class="tex-white">
                                <span><i class="fa fa-edit"></i></span>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                            </p>
                            <a href="/Products/Index" style="margin-left: 136px;
    margin-top: -98px;" class="btn  btn-outline-secondary btn-flat"><i class="fa fa-undo mr-1" aria-hidden="true"></i>Back</a>

                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.ProductName)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.ProductName)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.SalesStartDate)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.SalesStartDate)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.UnitPrice)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.UnitPrice)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.Unit)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.Unit)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.Tax)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.Tax)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.Description)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.Description)</p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12 col-md-3"> <h6>@Html.DisplayNameFor(model => model.IsActive)</h6></div>
                        <div class="col-lg-9 col-sm-12 col-md-3"><p class="font-weight-normal"> @Html.DisplayFor(model => model.IsActive)</p></div>
                    </div>
                  

                </div>
            </div>
        </div>
    </div>
</div>


